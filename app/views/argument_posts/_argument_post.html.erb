	    <div class="panel argument-post" id=<%= argument_post.id %> >

		    <div class="argument-post-voting-grid" id=<%= "argument-post-card-#{argument_post.id}" %>>
	      	<% @votable = argument_post %>  
	        <%= render 'votes/argument_post_vote_grid' %>
	      </div>

	   	  <span class="secondary label author" >
	        <%= argument_post.user.name %>
	      </span>
	      <div class="comment_body"  >
	      	<p><%= h(argument_post.content).gsub(/\n/, '<br/>').html_safe %></p>
	      </div>
	      <%= render 'argument_posts/argument_post_links', argument_post: argument_post %>
	      <% argument_post.agreeing_children.each do |child_post| %>
	      	<%= render 'argument_posts/argument_post', argument_post: child_post %>
	      <% end %>
	    </div>